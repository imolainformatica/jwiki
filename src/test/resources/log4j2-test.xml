<?xml version="1.0" encoding="UTF-8"?>

<Configuration name="jWiki">
    <Appenders>
        <RollingFile name="File" fileName="jwikitest.log" append="true" filePattern="test_%d{yyyyMMdd}.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

        <File name="ColorLogAppender" fileName="ColorLogTest.log" append="false" >
         </File>
    </Appenders>

    <Loggers>
        <Logger name="fastily.jwiki.core.ColorLog" level="INFO" additivity="false">
            <AppenderRef ref="ColorLogAppender"/>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>